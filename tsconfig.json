{
  "compilerOptions": {
    "rootDirs": ["src", "config"],
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "lib": ["ES2016", "DOM", "esnext", "dom", "dom.iterable"],
    "paths": {
      "antd-mobile": ["./src/index.ts"],
      "antd-mobile/src/*": ["./src/*"],
      "antd-mobile/es/*": ["./src/*"],
      "demos": ["./src/demos/index.ts"],
      "testing": ["./src/tests/testing"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "module": "esnext",
    "isolatedModules": true,
    "types": ["node", "rive/globals"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    ".dumi",
    ".rive",
    "build",
    "coverage"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
